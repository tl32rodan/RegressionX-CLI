{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://regressionx.dev/schemas/regression_global_report.schema.json",
  "title": "RegressionX Global Report",
  "type": "object",
  "required": ["schema_version", "generated_at", "summary", "cases"],
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "type": "integer",
      "minimum": 1
    },
    "generated_at": {
      "type": "string"
    },
    "summary": {
      "type": "object",
      "required": ["total", "pass", "fail", "failure", "error"],
      "additionalProperties": false,
      "properties": {
        "total": { "type": "integer", "minimum": 0 },
        "pass": { "type": "integer", "minimum": 0 },
        "fail": { "type": "integer", "minimum": 0 },
        "failure": { "type": "integer", "minimum": 0 },
        "error": { "type": "integer", "minimum": 0 }
      }
    },
    "cases": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["status", "differences", "errors", "reports"],
        "additionalProperties": false,
        "properties": {
          "status": { "type": "string" },
          "differences": {
            "type": "array",
            "items": { "type": "string" }
          },
          "errors": {
            "type": "array",
            "items": { "type": "string" }
          },
          "reports": {
            "type": "object",
            "additionalProperties": { "type": "string" }
          }
        }
      }
    }
  }
}
