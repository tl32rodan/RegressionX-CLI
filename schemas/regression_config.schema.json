{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://regressionx.dev/schemas/regression_config.schema.json",
  "title": "RegressionX Regression Configuration",
  "type": "object",
  "required": [
    "schema_version",
    "paths",
    "versions",
    "cmd_templates",
    "filters",
    "reporting",
    "cases"
  ],
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "type": "integer",
      "minimum": 1
    },
    "paths": {
      "type": "object",
      "required": ["workspace_root", "artifacts_root"],
      "additionalProperties": false,
      "properties": {
        "workspace_root": {
          "type": "string",
          "minLength": 1
        },
        "artifacts_root": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "versions": {
      "type": "object",
      "required": ["baseline", "candidate"],
      "additionalProperties": false,
      "properties": {
        "baseline": {
          "type": "string",
          "minLength": 1
        },
        "candidate": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "cmd_templates": {
      "type": "object",
      "additionalProperties": false,
      "minProperties": 1,
      "properties": {
        "preprocess": {
          "type": "string",
          "minLength": 1
        },
        "run": {
          "type": "string",
          "minLength": 1
        },
        "postprocess": {
          "type": "string",
          "minLength": 1
        },
        "compare": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "filters": {
      "type": "object",
      "required": ["include", "ignore", "extra_ignore_allowed"],
      "additionalProperties": false,
      "properties": {
        "include": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "ignore": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "extra_ignore_allowed": {
          "type": "boolean"
        }
      }
    },
    "reporting": {
      "type": "object",
      "required": ["global_report", "case_report", "formats"],
      "additionalProperties": false,
      "properties": {
        "global_report": {
          "type": "string",
          "minLength": 1
        },
        "case_report": {
          "type": "string",
          "minLength": 1
        },
        "formats": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      }
    },
    "execution": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "timeout_seconds": {
          "type": "number",
          "minimum": 1
        }
      }
    },
    "cases": {
      "type": "array",
      "items": {
        "$ref": "https://regressionx.dev/schemas/regression_case.schema.json"
      },
      "minItems": 1
    }
  }
}
