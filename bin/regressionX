#!/usr/bin/env python3
import sys
import os

# Add project root to sys.path so we can import regressionx without installing it
project_root = os.path.abspath(os.path.join(os.path.dirname(__file__), '..'))
sys.path.insert(0, project_root)

try:
    from regressionx.cli import main
except ImportError as e:
    print(f"Error importing regressionx: {e}", file=sys.stderr)
    sys.exit(1)

if __name__ == "__main__":
    main()
